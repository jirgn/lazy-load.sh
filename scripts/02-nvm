function setup_nvm() {
  local binaries=(nvm node npm yarn)

  for binary in $binaries; do
    source /dev/stdin <<EOF
function ${binary}() {
  for t in ${binaries}; do
    unset -f "\$t";
  done

  if [[ !(-v "\$nmv_loaded") || "\$rvm_loaded" -eq false ]]; then
    echo "... loading nvm";
    export NVM_DIR="$HOME/.nvm"
    [[ -s "${BREW_PREFIX}/opt/nvm/nvm.sh" ]] && . "${BREW_PREFIX}/opt/nvm/nvm.sh"

    $binary "\$@";
  fi
}
EOF
  done

  unset -f "setup_nvm"
}

setup_nvm
