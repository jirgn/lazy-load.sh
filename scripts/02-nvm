function setup_nvm() {
  local binaries=(nvm node npm yarn)

  for binary in $binaries; do
    source /dev/stdin <<EOF
function ${binary}() {
  for t in ${binaries}; do
    unset -f "\$t";
  done

  export NVM_DIR="$HOME/.nvm"
  [[ -s "${BREW}/opt/nvm/nvm.sh" ]] && . "${BREW}/opt/nvm/nvm.sh"

  $binary "\$@";
}
EOF
  done

  unset -f "setup_nvm"
}

setup_nvm
