function setup_rvm() {
  read -r -A binaries <<< `slist ruby`
  binaries+=('rvm')

  for binary in $binaries; do
    source /dev/stdin <<EOF
function ${binary}() {
  for t in ${binaries}; do
    unset -f "\$t";
  done

  [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm";

  ${binary} "\$@";
}
EOF
  done

  unset -f "setup_rvm"
}

setup_rvm
